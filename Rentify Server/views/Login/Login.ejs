<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Đăng nhập</title>
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .card {
            width: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-warning {
            transition: background-color 0.3s ease;
        }

        .btn-warning:hover {
            background-color: rgb(255, 139, 0);
        }
    </style>
</head>

<body>
    <div class="card p-5">
        <div class="text-center mb-4">
            <h2 style="color: rgb(254, 177, 110);" class="fw-bold">Đăng nhập</h2>
        </div>
        <form id="loginForm">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Nhập tên đăng nhập" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" required>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-warning w-100" type="submit">Đăng nhập</button>
            </div>
            <hr>
            <div class="d-flex justify-content-center">
                <button class="btn btn-warning w-100">
                    <a href="/api/register1"> Đăng ký</a>
                </button>
            </div>
        </form>
    </div>

    <script>
        async function login(event) {
            event.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            try {
                const response = await fetch('http://localhost:3000/api/admin/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username, password }),
                });

                if (response.ok) {
                    const data = await response.json();
                    const token = data.token;

                    localStorage.setItem('token', token);
                    window.location.href = "http://localhost:3000/api/post/list";
                } else {
                    console.error('Đăng nhập thất bại');
                    alert("Bạn không có quyền truy cập");
                }
            } catch (error) {
                console.error("Lỗi khi đăng nhập: ", error);
            }
        }

        async function fetchData(link) {
            const token = localStorage.getItem('token');

            console.log("Token from localStorage:", token); // Kiểm tra token lưu trong localStorage
            if (!token) {
                alert('Không có token, hãy kiểm tra đăng nhập.');
                return;
            }

            const response = await fetch(link, {
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            });
            console.log("Authorization header sent:", `Bearer ${token}`); // Kiểm tra header được gửi

            if (response.ok) {
                const htmlContent = await response.text();
                console.log("htmlContent: ", htmlContent);
                document.querySelector("body").innerHTML = htmlContent;
            } else {
                alert('Lỗi khi kiểm tra dữ liệu');
            }
        }
        document.getElementById('loginForm').addEventListener('submit', login);
    </script>
</body>

</html>