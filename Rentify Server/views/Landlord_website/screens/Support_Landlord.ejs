<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý người dùng</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        h2 {
            text-align: center;
            color: #333;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
            max-width: 100%;
        }


        .table thead {
            background-color: #f9f9f9;
            text-align: left;
        }

        .table td:first-child,
        .table th:first-child {
            width: 50px;
        }

        .table th,
        .table td {
            padding: 15px;
            border: none;
            width: 100%;
            white-space: normal;
            vertical-align: middle;
            align-items: center;
            justify-content: center;
            text-align: center;

            overflow: hidden;
            text-overflow: ellipsis;
            max-width: none;
            border: none !important;
            box-shadow: none !important;
        }

        .table th {
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            line-height: normal;
            color: rgb(3, 2, 41);
            font-size: 0.75rem;
            font-weight: 500;
        }

        .table td {
            font-size: 0.75rem;
            font-family: Nunito, sans-serif;
            line-height: 1.66;
            font-weight: 600;
        }



        .status-waiting {
            font-size: 1rem;
            color: white;
            background-color: #dc3545;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
        }

        .status-completed {
            font-size: 1rem;
            color: black;
            background-color: #f8f9fa;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
        }

        #detailModal .modal-dialog {
            max-width: 90%;
            width: auto;
        }

        #detailModal .modal-body {
            max-height: 70vh;
            overflow-y: auto;
            word-wrap: break-word;
            white-space: normal;
        }

        #detailModal .modal-content {
            width: 90%;
            max-width: none;
        }

        #detailModal img {
            max-width: 100%;
            height: auto;
        }

        .modal-body h5 {
            display: inline-block;
            margin-bottom: 0;
            /* Loại bỏ khoảng cách mặc định */
            padding-right: 10px;
            /* Thêm khoảng cách bên phải cho tiêu đề */
        }

        .row.gx-5 {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            /* Đảm bảo các phần tử căn chỉnh ở đầu cột */
        }
    </style>
</head>

<body>
    <div class="content-wrapper">
        <h2>Quản lý các yêu cầu hỗ trợ</h2>
        <div class="container-fluid my-4">
            <!-- Dropdown để lọc theo Status -->
            <div class="d-flex justify-content-between mb-3">
                <label for="statusFilter" class="form-label">Lọc theo trạng thái</label>
                <select class="form-select w-auto" id="statusFilter">
                    <option value="">Tất cả</option>
                    <option value="1">Đang đợi</option>
                    <option value="0">Đã hoàn thành</option>
                </select>
            </div>
        </div>


        <div class="container-fluid my-4">

            <!-- Modal for displaying details -->
            <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="detailModalLabel">Chi tiết yêu cầu hỗ trợ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="container overflow-hidden text-center">
                            <div class="row gx-5">
                                <!-- đây là phần show ảnh -->
                                <div class="col">
                                    <div class="modal-body" id="modalBody">
                                        <h5 class="text-start mb-3">Hình ảnh</h5>
                                        <div id="modalContent"></div>
                                    </div>
                                </div>

                                <!-- show chi tiết phần dữ liệu ở đây -->
                                <div class="col" id="showSupport">
                                    <div class="modal-body">
                                        <h5 class="text-start mb-3">Nội dung</h5> <!-- Tiêu đề "Nội dung" -->
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>User ID</th>
                                                    <th>Room ID</th>
                                                    <th>Title</th>
                                                    <th>Content</th>
                                                </tr>
                                            </thead>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Modal: Sửa Role -->
            <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editUserModalLabel">Edit Support</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editUserForm">
                                <input type="hidden" id="editUserId" />
                                <div class="mb-3">
                                    <label for="editRole" class="form-label">Status</label>
                                    <select class="form-select" id="editRole" required>
                                        <option value="1">Đang đợi</option>
                                        <option value="0">Đã hoàn thành</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>User ID</th>
                        <th>Room ID</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Status</th>
                        <th>Act</th>
                    </tr>
                </thead>
                <tbody id="user-table">
                    <% if (data && data.length> 0) { %>
                        <% data.forEach((item, index)=> { %>
                            <tr data-status="<%= item.status %>" data-images='<%- JSON.stringify(item.images || []) %>'>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= item._id %>
                                </td>
                                <td>
                                    <%= item.user_id %>
                                </td>
                                <td>
                                    <%= item.room_id %>
                                </td>
                                <td>
                                    <%= item.title_support %>
                                </td>
                                <td>
                                    <%= item.content_support %>
                                </td>
                                <td class="status-column">
                                    <% if (item.status===1) { %>
                                        <span class="badge status-waiting">Đang đợi</span>
                                        <% } else { %>
                                            <span class="badge status-completed">Đã hoàn thành</span>
                                            <% } %>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-primary btn-sm" data-show-list='<%- JSON.stringify(item) %>'
                                        onclick="openDetailModal(this)">
                                        Xem chi tiết
                                    </button>
                                    <button class="btn btn-warning"
                                        onclick="editUser('<%= item._id %>', '<%= item.status %>')">Sửa</button>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Không có dữ liệu</td>
                                    </tr>
                                    <% } %>
                </tbody>


            </table>
        </div>
        <script>
            // Lưu dữ liệu gốc khi trang được tải lần đầu
            let originalData = [];

            // Hàm này sẽ được gọi khi trang được tải lần đầu
            function loadData() {
                const rows = document.querySelectorAll('#user-table tr');
                let data = [];
                rows.forEach(row => {
                    const rowStatus = row.getAttribute('data-status');
                    const _id = row.cells[1]?.textContent.trim();
                    const user_id = row.cells[2]?.textContent;
                    const room_id = row.cells[3]?.textContent;
                    const title_support = row.cells[4]?.textContent;
                    const content_support = row.cells[5]?.textContent;

                    const images = JSON.parse(row.getAttribute('data-images') || '[]');
                    data.push({
                        _id,
                        user_id,
                        room_id,
                        title_support,
                        content_support,
                        status: rowStatus === "1" ? 1 : 0,
                        images
                    });
                });
                originalData = data;


            }

            // Hàm lọc bảng theo trạng thái
            function filterTableByStatus(status) {
                const rows = document.querySelectorAll('#user-table tr');
                rows.forEach(row => {
                    const rowStatus = row.getAttribute('data-status');
                    if (status === "" || rowStatus === status) {
                        row.style.display = ""; // Hiển thị dòng
                    } else {
                        row.style.display = "none"; // Ẩn dòng
                    }
                });
            }





            // Hàm render lại bảng với dữ liệu mới
            function renderTableData(data) {
                const userTable = document.getElementById("user-table");
                userTable.innerHTML = ""; // Xóa nội dung bảng trước khi render mới
                if (data && data.length > 0) {
                    data.forEach((item, index) => {

                        // item.user_id = item.user_id.trim();
                        // item.room_id = item.room_id.trim();
                        // item.title_support = item.title_support.trim();
                        // item.content_support = item.content_support.trim();

                        const row = document.createElement("tr");

                        row.setAttribute('data-status', item.status);
                        row.innerHTML = `
    <td>${index + 1}</td>
    <td>${item._id}</td>
    <td>${item.user_id}</td>
    <td>${item.room_id}</td>
    <td>${item.title_support}</td>
    <td>${item.content_support}</td>
    <td class="status-column">
        ${item.status === 1 ? "<span class='badge status-waiting'>Đang đợi</span>" : "<span class='badge status-completed'>Đã hoàn thành</span>"}
    </td>
    <td>
         <button class="btn btn-primary btn-sm" 
             data-show-list='${JSON.stringify(item)}'
             onclick="openDetailModal(this)">Xem chi tiết</button>
        <!-- Sửa button -->
        <button class="btn btn-warning btn-edit" data-id="${item._id}" data-status="${item.status}">Sửa</button>
    </td>
`;



                        userTable.appendChild(row);
                    });
                }
                // Cập nhật sự kiện cho các nút "Sửa" sau khi render lại
                const editButtons = document.querySelectorAll('.btn-edit');
                editButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        const userId = this.getAttribute('data-id');
                        const currentStatus = this.getAttribute('data-status');
                        editUser(userId, currentStatus);
                    });
                });


            }



            // Khi người dùng thay đổi lựa chọn bộ lọc
            document.getElementById('statusFilter').addEventListener('change', function () {
                const selectedStatus = this.value;
                console.log("Selected Status:", selectedStatus);
                filterTableByStatus(selectedStatus); // Lọc và render lại bảng
            });

            // Lưu dữ liệu ban đầu khi trang được tải lần đầu
            window.onload = loadData;


            // Xem chi tiết
            function openDetailModal(button) {
                const showList = JSON.parse(button.getAttribute('data-show-list'));

                //const showList = JSON.parse(decodeURIComponent(button.getAttribute('data-show-list')));
                console.log("Dữ liệu showList:", showList);
                if (showList.image && Array.isArray(showList.image) && showList.image.length > 0) {
                    console.log("Danh sách ảnh:", showList.image);
                } else {
                    console.log("Không có hình ảnh trong dữ liệu này.");
                }

                const modalContent = document.getElementById('modalContent');
                modalContent.innerHTML = ''; // Reset modal content before adding images

                // Hiển thị ảnh nếu có trong showList
                if (Array.isArray(showList.image) && showList.image.length > 0) {
                    showList.image.forEach(photo => {
                        // Tạo đường dẫn chính xác đến ảnh trong thư mục imageReport
                        const imageUrl = `/public/imageReport/${photo}`;

                        // Kiểm tra URL hợp lệ
                        console.log("URL ảnh:", imageUrl);

                        // Tạo thẻ <img> để hiển thị ảnh
                        const img = document.createElement('img');
                        img.src = imageUrl;  // Đặt đường dẫn ảnh
                        img.alt = 'Không thể tải ảnh';  // Mô tả khi ảnh không thể tải
                        img.className = 'img-fluid mb-2';  // Căn chỉnh responsive cho ảnh
                        img.style.maxWidth = '100%'; // Đảm bảo ảnh không bị tràn modal

                        // Thêm ảnh vào nội dung modal
                        modalContent.appendChild(img);
                    });
                } else {
                    modalContent.innerHTML = '<p>Không có ảnh để hiển thị.</p>';
                }

                // Hiển thị thông tin chi tiết
                //const detailsBody = document.getElementById('detailsBody');
                const showSupport = document.getElementById('showSupport');

                const detailsHTML = `
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td><strong>User ID:</strong></td>
                                <td>${showList._id}</td>
                            </tr>
                            <tr>
                                <td><strong>User ID:</strong></td>
                                <td>${showList.user_id}</td>
                            </tr>
                            <tr>
                                <td><strong>Room ID:</strong></td>
                                <td>${showList.room_id}</td>
                            </tr>
                            <tr>
                                <td><strong>Title:</strong></td>
                                <td>${showList.title_support}</td>
                            </tr>
                            <tr>
                                <td><strong>Content:</strong></td>
                                <td>${showList.content_support}</td>
                            </tr>
                            
                        </tbody>
                    </table>
                `;
                showSupport.innerHTML = detailsHTML;

                // Hiển thị modal
                const detailModal = new bootstrap.Modal(document.getElementById('detailModal'));
                detailModal.show();
            }

            // Khi nhấn nút Edit, hiển thị modal sửa với dữ liệu hiện tại
            function editUser(userId, currentStatus) {
                // Set giá trị hiện tại của status vào modal
                document.getElementById("editUserId").value = userId.trim();
                document.getElementById("editRole").value = currentStatus;

                // Sau đó, log chung
                console.log("420:", userId, status); // In cả 2 giá trị này ra

                // Hiển thị modal sửa
                const editUserModal = new bootstrap.Modal(document.getElementById("editUserModal"));
                editUserModal.show();
            }

            // Xử lý khi người dùng submit form sửa
            document.getElementById("editUserForm").addEventListener("submit", async (e) => {
                e.preventDefault();

                const userId = document.getElementById("editUserId").value; // Lấy ID người dùng
                const status = document.getElementById("editRole").value; // Lấy giá trị trạng thái mới
                console.log("432: ", userId, status);

                try {
                    // Gửi yêu cầu cập nhật đến server
                    const response = await fetch(`/api/support_mgr/update/${userId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ status }), // Gửi dữ liệu status
                    });

                    const data = await response.json();


                    if (response.ok) {
                        // Cập nhật giao diện danh sách
                        const row = document.querySelector(`tr[data-id="${userId}"]`); // Dòng tương ứng với userId
                        if (row) {
                            row.querySelector('.status-column').textContent =
                                status === "1" ? "Đang đợi" : "Đã hoàn thành"; // Cập nhật nội dung cột trạng thái
                        }

                        // Ẩn modal sửa
                        const editUserModal = bootstrap.Modal.getInstance(document.getElementById("editUserModal"));
                        editUserModal.hide();
                        window.location.reload();
                        //filterTableByStatus(selectedStatus);
                        //renderTableData(data);
                        //alert("Cập nhật trạng thái thành công!");
                    } else {
                        throw new Error(data.message || "Cập nhật thất bại.");
                    }
                } catch (error) {
                    console.error("Error:", error);
                    alert(`Lỗi: ${error.message}`);
                }
            });
        </script>

        <!-- Thêm Bootstrap JS vào cuối trang -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>